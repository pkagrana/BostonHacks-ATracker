<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pratik.bostonhacks.DisplayNextCourseOfAction"
    android:background="#C9B0CB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Highly Recommend That You Find Altenrative Forms of Transportation"
        android:id="@+id/findOtherTransport"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textColor="#15201E"
        android:gravity="center"
        android:textSize="72px"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find New Transportation"
        android:id="@+id/newTransport"
        android:typeface="monospace"
        android:background="#1E69D3"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="48px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />
</RelativeLayout>
